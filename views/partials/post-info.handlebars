<article class="post">
    <div class="title">
        <h2>{{post_title}}</h2>
        <span>({{post_content}})</span>
    </div>
    <div class="meta">
        by {{user.username}} on
        {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
    </div>
</article>